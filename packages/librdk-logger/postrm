#!/bin/bash
set -e

case "$1" in
    remove|purge)
        # Optionally remove log directories on purge
        if [ "$1" = "purge" ]; then
            rm -rf /rdklogs/logs
            rmdir /rdklogs 2>/dev/null || true
        fi
        ;;
    
    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;
    
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
