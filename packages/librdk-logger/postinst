#!/bin/bash
set -e

case "$1" in
    configure)
        # Create log directories
        mkdir -p /rdklogs/logs
        chmod 755 /rdklogs
        chmod 755 /rdklogs/logs
        ;;
    
    abort-upgrade|abort-remove|abort-deconfigure)
        ;;
    
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
