#!/bin/sh
set -e

# Install pkgconfig file for development package
if [ "$1" = "configure" ] && [ -n "$2" ]; then
    # This is an upgrade
    :
fi

# Install pkgconfig file
mkdir -p /usr/lib/pkgconfig
cat > /usr/lib/pkgconfig/trower-base64.pc <<'EOF'
prefix=/usr
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: trower-base64
Description: C implementation of base64 encode/decode
Version: 1.2.7
Libs: -L${libdir} -ltrower-base64
EOF

exit 0
