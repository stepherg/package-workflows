#!/bin/bash
set -e

case "$1" in
    remove)
        # Stop the service
        if [ -d /run/systemd/system ]; then
            if systemctl is-active rbus-elements.service >/dev/null 2>&1; then
                systemctl stop rbus-elements.service >/dev/null 2>&1 || true
            fi
            
            # Disable the service
            if systemctl is-enabled rbus-elements.service >/dev/null 2>&1; then
                systemctl disable rbus-elements.service >/dev/null 2>&1 || true
            fi
        fi
        ;;
    
    upgrade|deconfigure)
        # Don't stop service on upgrade
        ;;
    
    failed-upgrade)
        ;;
    
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
